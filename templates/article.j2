{% extends "base.j2" %}

{% block title %}{{ article.title }}{% endblock title %}

{% block head %}
<meta name="title" content="{{ article.title }}">
<meta name="author" content="{{ article.author }}">
<meta name="description" content="{{ article.summary }}">
<meta name="displaydate" content="{{ article.published_at }}">

<meta property="og:title" content="{{ article.title }}">
<meta property="article:author" content="{{ article.author }}">
<meta property="article:published_time" content="{{ article.published_at }}">
{% endblock head %}

{% block main_header %}
<a class="logotype" href="/" style="margin-top: -15px; margin-bottom: -15px;">
    <img src="/masthead.png" alt="The Bulldog Bulletin" height="32">
</a>
{% endblock main_header %}

{% block fixed_header %}
<p id="article-header-title">{{ article.title }}</p>
â€¢
<p><em>{{ article.author }}</em></p>
{% endblock fixed_header %}

{% block content %}
<div id="article-page">
    <header>
        <h1 class="title">{{ article.title }}</h1>
        <summary>{{ article.summary }}</summary>

        <div class="author-display">
            <div class="text-content">
                <p class="author">{{ article.author }}</p>
                <p><time datetime="{{ article.published_at }}">{{ fmt_date(article.published_at) }}</time></p>
            </div>
        </div>
    </header>
    <article>
        {{ article.content | safe }}
    </article>
</div>
{% endblock content %}