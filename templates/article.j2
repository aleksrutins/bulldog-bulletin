{% extends "base.j2" %}

{% block title %}{{ article.title }}{% endblock title %}

{% block head %}
<meta name="title" content="{{ article.title }}">
<meta name="author" content="{{ article.author }}">
<meta name="description" content="{{ article.summary }}">
<meta name="displaydate" content="{{ article.published_at }}">

<meta property="og:title" content="{{ article.title }}">
<meta property="article:author" content="{{ article.author }}">
<meta property="article:published_time" content="{{ article.published_at }}">
{% endblock head %}

{% block main_header %}
<a class="logotype" href="/" style="margin-top: -15px; margin-bottom: -15px;">The Bulldog Bulletin</a>
{% endblock main_header %}

{% block fixed_header %}
<p id="article-header-title">{{ article.title }}</p>
â€¢
<p><em>{{ article.author }}</em></p>
{% endblock fixed_header %}

{% block content %}
<div id="article-page">
    <header>
        <h1 class="title">{{ article.title }}</h1>
        <p>
            By <a class="byline-name" rel="author">{{ article.author }}</a><br>
            Published <time class="dateline" datetime="{{ article.published_at }}"></time><br>
            {% if article['issue'] is not none %}
                In <a href="/issues/{{article['issue']['id']}}">issue #{{article['issue']['id']}}</a><br>
            {% endif %}

            {% if article.categories|length > 0 %}Published in{% endif %}
            {% for cat in article.categories %}
                {%- if loop.index != 1 -%}, {%- endif %}
                <a href="/c/{{slugify(cat)}}">{{ cat }}</a>
            {%- endfor %}
        </p>
        <summary>{{ article.summary }}</summary>
    </header>
    <article>
        {{ article.content | safe }}
    </article>
</div>
{% endblock content %}