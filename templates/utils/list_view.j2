{% macro main_header(categories, current_cat) -%}
    <a class="logotype" href="/">The Bulldog Bulletin</a>
    <nav id="sitenav">
        {% for cat in categories %}
            <a href="/c/{{slugify(cat)}}"
            {% if cat == current_cat %}
               class="active"
            {% else %}{% endif %}
            >{{ cat }}</a>
        {% endfor %}
    </nav>
{%- endmacro -%}

{%- macro content(articles, current_cat) -%}
    {% for article in articles %}
        <div class="article-preview">
            <a class="article-title" href="/articles/{{ article.id }}">{{ article.title }}</a>
            <p class="stats">
                <a>{{ article.author }}</a>
                •
                <time datetime="{{ article.published_at }}"></time>
                {% for cat in article.categories %}
                    •
                    <a href="/c/{{slugify(cat)}}"
                    {% if cat == current_cat %}
                    class="active"
                    {% else %}{% endif %}
                    >{{ cat }}</a>
                {% endfor %}
            </p>
            <p>{{ article.summary }}</p>
        </div>
    {% endfor %}
{%- endmacro -%}